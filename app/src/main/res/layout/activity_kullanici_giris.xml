<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginarkaplan"
    tools:context="com.example.java_oglen.urunyonetimi.KullaniciGiris">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_above="@+id/txtGirisAdi"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="KULLANICI GİRİŞİ"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txtGirisAdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_above="@+id/txtGirisSifre"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:hint="Kullanıcı Mail"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtGirisSifre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Şifreniz"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/button2"
        android:layout_alignStart="@+id/txtGirisSifre"
        android:layout_below="@+id/txtGirisSifre"
        android:layout_marginTop="40dp"
        android:text="Giriş Yap" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/txtGirisSifre"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/txtGirisSifre"
        android:layout_marginBottom="170dp"
        android:text="Kayıt Yap" />
</RelativeLayout>
