<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:orientation="vertical"
    tools:context="com.example.java_oglen.urunyonetimi.KayitYap">


<LinearLayout
    android:layout_weight="1"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_weight="1"
        android:id="@+id/ADINIZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/colorPrimaryDark"


        android:text="ADINIZ" />

    <EditText
        android:layout_weight="1"
        android:id="@+id/txadınız"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:ems="10"

        android:hint="ADINIZ"
        android:inputType="textPersonName" />

</LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="0.1"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="18dp"

            android:text="SOYADINIZ" />

        <EditText

            android:layout_weight="1"
            android:id="@+id/txsoyadi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:hint="SOYADINIZ"
            android:inputType="textPersonName" />

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"



            android:text="TELEFON" />

        <EditText
            android:layout_weight="1"
            android:id="@+id/txtelefon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:ems="10"

            android:textSize="18dp"

            android:hint="telefon"
            android:inputType="textPersonName" />


    </LinearLayout>

   <LinearLayout
       android:layout_weight="1"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:layout_weight="1"
           android:textColor="@color/colorPrimaryDark"
           android:id="@+id/textView5"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           android:text="EMAİL"
           android:textColorLink="@color/colorPrimaryDark"
           android:textSize="18dp" />

       <EditText
           android:layout_weight="1"
           android:id="@+id/txemail"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           android:ems="10"
           android:hint="EMAİL"
           android:inputType="textPersonName" />

   </LinearLayout>

<LinearLayout
    android:layout_weight="1"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_weight="1"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"



        android:text="ŞİFRE" />

    <EditText
        android:id="@+id/txsifre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        android:ems="10"

        android:hint="ŞİFRE"

        android:inputType="textPersonName"
        android:password="true"
        android:textSize="18dp" />


</LinearLayout>



    <LinearLayout
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:onClick="kayitEkle"
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txemail"
        android:layout_below="@+id/txemail"

        android:text="KAYDET" />

</LinearLayout>


</LinearLayout>
